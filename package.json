{
  "name": "clawster",
  "version": "0.1.2",
  "description": "Desktop pet companion powered by ClawBot",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:mac:deploy": "npm run dist:mac && rm -f ../clawster-landign-electronbuilder/public/downloads/Clawster-*mac* ../clawster-landign-electronbuilder/public/downloads/latest-mac.yml && cp release/Clawster-*-arm64.dmg release/Clawster-*-arm64-mac.zip release/Clawster-*-arm64-mac.zip.blockmap release/latest-mac.yml ../clawster-landign-electronbuilder/public/downloads/",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "build:icons": "node scripts/build-icons.mjs && npx electron-icon-builder --input=assets/icon.png --output=assets",
    "start": "electron ."
  },
  "dependencies": {
    "@iconify/react": "^6.0.2",
    "active-win": "^8.1.0",
    "chokidar": "^3.5.3",
    "dotenv": "^17.3.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.8.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.clawster.app",
    "productName": "Clawster",
    "icon": "assets/icons/png/512x512.png",
    "mac": {
      "identity": "Yuwen Wu (39428U49B4)",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": {
        "teamId": "39428U49B4"
      },
      "extendInfo": {
        "NSScreenCaptureUsageDescription": "Clawster needs screen capture permission to help you with what's on your screen.",
        "NSAppleEventsUsageDescription": "Clawster needs this to detect which app you're using."
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/png/512x512.png",
      "category": "Utility"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/icons",
        "to": "assets/icons"
      },
      {
        "from": "assets/tray-icon.png",
        "to": "assets/tray-icon.png"
      },
      {
        "from": "assets/tray-icon@2x.png",
        "to": "assets/tray-icon@2x.png"
      },
      {
        "from": "openclaw",
        "to": "openclaw"
      }
    ],
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "generic",
      "url": "https://clawster.pet/downloads"
    }
  }
}
